<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/pb_product_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/iv_products"
            android:layout_width="@dimen/product_image_size"
            android:layout_height="220dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/d_mar_small_5dp"
            android:layout_marginLeft="@dimen/d_mar_small_5dp"
            android:layout_marginTop="@dimen/d_mar_small_5dp"
            android:layout_marginEnd="@dimen/d_mar_small_5dp"
            android:layout_marginRight="@dimen/d_mar_small_5dp"
            android:layout_marginBottom="@dimen/d_mar_small_5dp"
            android:scaleType="centerCrop"
            android:visibility="visible"
            android:src="@drawable/banner_image" />


        <View
            android:layout_width="170dp"
            android:layout_height="230dp"
            android:layout_alignLeft="@+id/image1"
            android:layout_alignTop="@+id/image1"
            android:layout_margin="00dp"
            android:background="@drawable/x_ds_transparent_radius" />


    </RelativeLayout>

    <affle.com.fitstreet.customviews.CustomTypefaceTextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/d_mar_normal_10dp"
        android:layout_marginTop="@dimen/d_mar_small_5dp"
        android:layout_marginRight="@dimen/d_mar_normal_10dp"
        android:layout_marginBottom="@dimen/d_mar_small_5dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:padding="@dimen/d_padding_coupns_fragment"
        android:textColor="@color/c_black"
        android:textSize="@dimen/s_txt_coupons_fragment"
        android:visibility="visible" />

</LinearLayout>